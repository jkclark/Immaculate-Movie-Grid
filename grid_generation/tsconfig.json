{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "common/*": [
                "../common/*"
            ],
            "src/*": [
                "src/*"
            ]
        },
        // The following two options are required for TypeORM's decorators
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "lib": [
        "es2015"
    ]
}

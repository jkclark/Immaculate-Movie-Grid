{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Compile & Generate Grid",
            "preLaunchTask": "npm: build", // run this task before launching the program
            "program": "${workspaceFolder}/grid_generation/dist/grid_generation/src/index.js", // the program to debug
            "outFiles": [
                "${workspaceFolder}/grid_generation/dist/**/*.js"
            ], // the location of the compiled JavaScript files
            "sourceMaps": true, // enable source maps to allow debugging of the original TypeScript files
            "cwd": "${workspaceFolder}/grid_generation", // the current working directory for the debug process
            "args": [
                "test-grid-graph",
                "file"
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Compile and debug current grid-gen TS File",
            "preLaunchTask": "tsc: build - tsconfig.json", // Compiles the TS files according to tsconfig.json
            "program": "${workspaceFolder}/grid_generation/dist/grid_generation/src/${fileBasenameNoExtension}.js", // Specifies the JS file to run
            "outFiles": [
                "${workspaceFolder}/grid_generation/**/*.js" // Adjust the path as necessary to match the location of compiled JS files
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/grid_generation",
            "console": "integratedTerminal"
        }
    ]
}

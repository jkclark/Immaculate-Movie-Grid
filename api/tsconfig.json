{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        // The following two options are required for decorators
        // used by the TypeORM models
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*.ts",
        "../common/**/*.ts"
    ]
}

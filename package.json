{
  "private": true,
  "workspaces": [
    "api",
    "common",
    "frontend",
    "grid_generation"
  ],
  "scripts": {
    "create-grid-generation-lambda-package-dir": "mkdir grid_generation_lambda_package",
    "npm-init-grid-generation-lambda-package": "cd grid_generation_lambda_package && npm init -y",
    "merge-grid-generation-lambda-package-jsons": "cd grid_generation_lambda_package && jq -s '.[0] * .[1]' ../grid_generation/package.json ../common/package.json > package.json",
    "install-grid-generation-lambda-dependencies": "cd grid_generation_lambda_package && npm install",
    "build-grid-generation-lambda-package": "cd grid_generation_lambda_package && tsc --project ../grid_generation/tsconfig.deploy.json --typeRoots ./node_modules/@types && npx tsc-alias --project ../grid_generation/tsconfig.deploy.json",
    "copy-grid-generation-graph-json": "cd grid_generation_lambda_package && cp ../grid_generation/src/complete_graph.json ./grid_generation/src/complete_graph.json",
    "copy-grid-generation-extra-info-json": "cd grid_generation_lambda_package && cp ../grid_generation/src/complete_credit_extra_info.json ./grid_generation/src/complete_credit_extra_info.json",
    "zip-grid-generation-lambda-package": "cd grid_generation_lambda_package && zip -r ../grid_generation_lambda_package.zip *",
    "generate-grid-generation-lambda-zip": "npm run create-grid-generation-lambda-package-dir && npm run npm-init-grid-generation-lambda-package && npm run merge-grid-generation-lambda-package-jsons && npm run install-grid-generation-lambda-dependencies && npm run build-grid-generation-lambda-package && npm run copy-grid-generation-graph-json && npm run copy-grid-generation-extra-info-json && npm run zip-grid-generation-lambda-package",
    "create-api-lambda-package-dir": "mkdir api_lambda_package",
    "npm-init-api-lambda-package": "cd api_lambda_package && npm init -y",
    "merge-api-lambda-package-jsons": "cd api_lambda_package && jq -s '.[0] * .[1]' ../api/package.json ../common/package.json > package.json",
    "install-api-lambda-dependencies": "cd api_lambda_package && npm install",
    "build-api-lambda-package": "cd api_lambda_package && tsc --project ../api/tsconfig.deploy.json --typeRoots ./node_modules/@types && npx tsc-alias --project ../api/tsconfig.deploy.json",
    "zip-api-lambda-package": "cd api_lambda_package && zip -r ../api_lambda_package.zip *",
    "generate-api-lambda-zip": "npm run create-api-lambda-package-dir && npm run npm-init-api-lambda-package && npm run merge-api-lambda-package-jsons && npm run install-api-lambda-dependencies && npm run build-api-lambda-package && npm run zip-api-lambda-package",
    "create-frontend-dist-dir": "mkdir frontend_dist",
    "npm-init-frontend-dist": "cd frontend_dist && npm init -y",
    "merge-frontend-dist-jsons": "cd frontend_dist && jq -s '.[0] * .[1]' ../frontend/package.json ../common/package.json > package.json",
    "install-frontend-dist-dependencies": "cd frontend_dist && npm install",
    "install-vite-for-gh-actions": "cd frontend_dist && npm install vite && npm install @vitejs/plugin-react-swc",
    "copy-frontend-and-common-files": "cd frontend_dist && mkdir frontend && mkdir common && cp -r ../frontend/* ./frontend && cp -r ../common/* ./common",
    "type-check-frontend-dist": "cd frontend_dist && tsc --project ./frontend/tsconfig.json",
    "vite-build-frontend-dist": "cd frontend_dist/frontend && vite build",
    "generate-frontend-dist": "npm run create-frontend-dist-dir && npm run npm-init-frontend-dist && npm run merge-frontend-dist-jsons && npm run install-frontend-dist-dependencies && npm run install-vite-for-gh-actions && npm run copy-frontend-and-common-files && npm run type-check-frontend-dist && npm run vite-build-frontend-dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.574.0",
    "@aws-sdk/credential-provider-cognito-identity": "^3.574.0",
    "@aws-sdk/lib-storage": "^3.578.0",
    "@types/aws-lambda": "^8.10.138",
    "@types/node": "^20.12.12",
    "jotai": "^2.8.3",
    "lodash.debounce": "^4.0.8",
    "node-fetch": "^2.7.0",
    "pg": "^8.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.3.1",
    "tailwindcss": "^3.4.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  }
}
